<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guest.spaceinvaders.AboutActivity"
    android:background="@drawable/space">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is our space invaders project made for our final Android project during our time at Epicodus. Contributions were made by Scott McIntire, Justin Fokes, Scott Holland and Reed Lambier"
        android:id="@+id/aboutText"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/team"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/aboutText"
        android:textAlignment="center"
        android:paddingLeft="10dp" />
</RelativeLayout>
